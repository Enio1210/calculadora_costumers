<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"


    >

    <TextView

        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_1"
        android:ellipsize="start"
        android:fontFamily="@font/floewfont"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:maxLength="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="3dp"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:background="@drawable/button"
        android:ellipsize="end"
        android:fontFamily="@font/floewfont"
        android:gravity="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="3dp"
        android:maxLength="13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/png"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/apagar_tudo"
                style="@style/NUmberButtonStyle"
                android:layout_height="match_parent"
                android:background="#EAC7D7"
                android:text="CE"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/dois_zeros"
                style="@style/NUmberButtonStyle"
                android:text="00" />

            <TextView
                android:id="@+id/porcentagem"
                style="@style/NUmberButtonStyle"
                android:text="%" />

            <TextView
                android:id="@+id/divisao"
                style="@style/NUmberButtonStyle"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sete"
                style="@style/NUmberButtonStyle"
                android:text="7" />

            <TextView
                android:id="@+id/oito"
                style="@style/NUmberButtonStyle"
                android:text="8" />

            <TextView
                android:id="@+id/nove"
                style="@style/NUmberButtonStyle"
                android:text="9" />

            <TextView

                android:id="@+id/multiplicacao"
                style="@style/NUmberButtonStyle"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quatro"
                style="@style/NUmberButtonStyle"
                android:text="4" />

            <TextView
                android:id="@+id/cinco"
                style="@style/NUmberButtonStyle"
                android:text="5" />

            <TextView
                android:id="@+id/seis"
                style="@style/NUmberButtonStyle"
                android:text="6" />

            <TextView

                android:id="@+id/subtracao"
                style="@style/NUmberButtonStyle"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/um"
                style="@style/NUmberButtonStyle"
                android:text="1" />

            <TextView
                android:id="@+id/dois"
                style="@style/NUmberButtonStyle"
                android:text="2" />

            <TextView
                android:id="@+id/tres"
                style="@style/NUmberButtonStyle"
                android:text="3" />

            <TextView
                android:id="@+id/adicao"
                style="@style/NUmberButtonStyle"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ponto"
                style="@style/NUmberButtonStyle"
                android:text="." />

            <TextView
                android:id="@+id/zero"
                style="@style/NUmberButtonStyle"
                android:text="0" />

            <ImageView
                android:id="@+id/apaga"
                style="@style/NUmberButtonStyle"
                android:scaleType="center"
                android:src="@drawable/baseline_backspace_24"
                android:text="00" />

            <TextView
                android:id="@+id/igual"
                style="@style/NUmberButtonStyle"
                android:text="=" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:fontFamily="@font/dacing"
        android:gravity="center"
        android:text="Caculation"
        android:textSize="70dp" />

</LinearLayout>